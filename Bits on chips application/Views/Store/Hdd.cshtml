@model IEnumerable<Bits_on_chips_application.Models.Component>

@{
    ViewData["Title"] = "Hdd page";
}

<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    <div class="btns">
        <a class="nav-button" asp-area="" asp-controller="Store" asp-action="Categories">Back to categories</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="component-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ComponentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Producer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Interface)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Size)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Buffer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Speed)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComponentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interface)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Buffer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speed)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ComponentId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ComponentId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ComponentId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <br />
        <div class="sub_title">
            No items in this category yet, please come back soon!
        </div>
    }
</div>