@model IEnumerable<Bits_on_chips_application.Models.Component>
@{
    ViewData["Title"] = "Ssd page";
}

<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    <div class="btns">
        <a class="nav-button" asp-area="" asp-controller="Store" asp-action="Categories">Back to categories</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="component-table">
            <thead>
                <tr>
                    <th>
                        Item name
                    </th>
                    <th>
                        Producer
                    </th>
                    <th>
                        Interface
                    </th>
                    <th>
                        Capacity
                    </th>
                    <th>
                        Max read
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td witdh="15%">
                            @item.ComponentName
                        </td>
                        <td witdh="15%">
                            @item.Producer
                        </td>
                        <td witdh="15%">
                            @item.Interface
                        </td>
                        <td witdh="15%">
                            @item.Size
                        </td>
                        <td witdh="15%">
                            @item.MaxRead
                        </td>
                        <td witdh="15%">
                            @item.Price
                        </td>
                        <td>
                            <a class="nav-button" style="margin-bottom: 20px;" asp-area="" asp-controller="User" asp-action="Info">Add to cart</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else 
    {
        <br/>
        <br/>
        <div class="sub_title">
            No items in this category yet, please come back soon!
        </div>
    }

</div>