@model IEnumerable<Bits_on_chips_application.Models.Component>
@{
    ViewData["Title"] = "Motherboard page";
}

<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    <div class="btns">
        <a class="nav-button" asp-area="" asp-controller="Store" asp-action="Categories">Back to categories</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="component-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ComponentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Producer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Interface)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Socket)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    @if (Authentication.Jwt.JwtMiddleware.IsUserLoggedId(Context))
                    {
                        <th class="btns-post"></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComponentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interface)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Socket)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        @if (Authentication.Jwt.JwtMiddleware.IsUserLoggedId(Context))
                        {
                            <td class="btns-post" role="group">
                                @if (Authentication.Jwt.JwtMiddleware.IsUserInRole(Context, Bits_on_chips_application.Utility.Helper.Admin))
                                {
                                    <a class="btn-edit" asp-controller="Store" asp-action="Edit" asp-route-Id="@item.ComponentId">Edit</a>
                                    <a class="btn-delete" asp-controller="Store" asp-action="Delete" asp-route-Id="@item.ComponentId">Delete</a>
                                }
                                @{Component component = item;}
                                @if (Authentication.Jwt.JwtMiddleware.IsUserInRole(Context, Bits_on_chips_application.Utility.Helper.Customer))
                                {
                                    <form class="input" method="post" asp-action="AddItem" asp-controller="Cart">
                                        <input asp-for="@component.ComponentId" hidden />
                                        @if (TempData["item added"] != null && item.ComponentId.ToString().Equals(TempData["item added"].ToString()))
                                        {
                                            <input type="submit" class="btn-add" value="Item added!" />
                                        }
                                        else
                                        {
                                            <input type="submit" class="btn-add" value="Add to cart" />
                                        }
                                    </form>
                                    <form class="input" method="post" asp-action="AddItem" asp-controller="Wish">
                                        <input asp-for="@component.ComponentId" hidden />
                                        @if (!(TempData["item added"] != null && item.ComponentId.ToString().Equals(TempData["item added"].ToString())))
                                        {
                                            <input type="submit" class="btn-add" value="Wish" />
                                        }
                                    </form>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <br />
        <div class="sub_title">
            No items in this category yet, please come back soon!
        </div>
    }
</div>