@model IEnumerable<Bits_on_chips_application.Models.Category>
@inject Microsoft.AspNetCore.Identity.SignInManager<Bits_on_chips_application.Models.ApplicationUser> signInManager
@{
    ViewData["Title"] = "Component categories page";
}

<div class="text-center">
    <div class="title"> @ViewData["Title"]</div>
    @if (signInManager.IsSignedIn(User) && User.IsInRole(Bits_on_chips_application.Utility.Helper.Admin))
    {
        <div class="btns">
            <a class="nav-button" asp-action="Create">Add new component</a>
        </div>
    }
    <div class="sub_title">Please select a category of components</div>
    <div class="comp_categ">

        @foreach (var categ in Model)
        {
            string imgSrc = "../css/" + categ.CategoryName + "Image.jpg";
            <a class="nav-button" asp-controller="Store" asp-action="Category" asp-route-Id=@categ.CategoryId><img src=@imgSrc></a>
        }

    </div>
</div>