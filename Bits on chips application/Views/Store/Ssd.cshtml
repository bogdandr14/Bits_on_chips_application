@model IEnumerable<Bits_on_chips_application.Models.Component>

@{
    ViewData["Title"] = "Ssd page";
}


<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    <div class="btns">
        <a class="nav-button" asp-controller="Store" asp-action="Categories">Back to categories</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="component-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ComponentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Producer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Interface)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Size)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaxRead)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th style="resize:both"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComponentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interface)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxRead)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <div class="btns w-100" role="group">
                                @*<a asp-controller="Store" asp-action="Edit" asp-route-Id="@item.ComponentId" style="font-size: 16px; border-radius: 6px; margin: 2px; padding: 1px; border-color: Highlight; color: Highlight">Edit</a>
                                <a asp-controller="Store" asp-action="Delete" asp-route-Id="@item.ComponentId" style="font-size: 16px; border-radius: 6px; margin: 2px; padding: 1px; border-color: red; color: red">Delete</a>*@
                                <a asp-controller="Store" asp-action="Details" asp-route-id="@item.ComponentId" style="font-size: 16px; border-radius: 6px; margin: 2px; padding: 1px; border-color: orange; color: orange">Add to cart</a>
                                @*<form asp-action="Ssd">
            <input type="hidden" asp-for="@item.ComponentId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </form>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <br />
        <div class="sub_title">
            No items in this category yet, please come back soon!
        </div>
    }

</div>
