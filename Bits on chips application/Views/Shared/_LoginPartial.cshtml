@inject Microsoft.AspNetCore.Identity.SignInManager<Bits_on_chips_application.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="User">
        <ul class="navbar-nav flex-grow-3">
            <li class="nav-item">
                <a class="nav-link" id="registerLink" asp-area="" asp-controller="User" asp-action="Info">Hello, @User.Identity.Name!</a>
            </li>
            <li class="nav-link">
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    </form>
}
else
{
<ul class="navbar-nav flex-grow-3">
    <li class="nav-item">
        <a class="nav-link" id="registerLink" asp-area="" asp-controller="User" asp-action="Register">Sign up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="loginLink" asp-area="" asp-controller="User" asp-action="Login">Sign in</a>
    </li>
</ul>
}
