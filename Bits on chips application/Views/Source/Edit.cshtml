@model Bits_on_chips_application.Models.Source

@{
    ViewData["Title"] = "Edit component";
}

<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    <div class="btns" style="margin-bottom: 30px">
        <a class="nav-button" asp-action="Index">Back to list</a>
    </div>
    <form class="input" method="post" asp-action="EditPost">
        <input asp-for="ComponentId" hidden />
        <input asp-for="SourceId" hidden />
        <input asp-for="Component.CategoryId" hidden />
        <input asp-for="Component.ComponentId" hidden />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
            <tr class="form-group">
                <th>
                    <label asp-for="Component.ComponentName" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Component.ComponentName" class="form-control w-50" value="@Model.Component.ComponentName" />
                    <span asp-validation-for="Component.ComponentName" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="Component.Producer" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Component.Producer" class="form-control w-50" value="@Model.Component.Producer" />
                    <span asp-validation-for="Component.Producer" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="Component.Description" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Component.Description" class="form-control w-50" value="@Model.Component.Description" />
                    <span asp-validation-for="Component.Description" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="Component.Price" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Component.Price" class="form-control w-50" value="@Model.Component.Price" />
                    <span asp-validation-for="Component.Price" class="text-danger"></span>
                </td>
            </tr>

            <tr class="form-group">
                <th>
                    <label asp-for="Component.Quantity" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Component.Quantity" class="form-control w-50" value="@Model.Component.Quantity" />
                    <span asp-validation-for="Component.Quantity" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="Power" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Power" class="form-control w-50" value="@Model.Power" />
                    <span asp-validation-for="Power" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="NumberFans" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="NumberFans" class="form-control w-50" value="@Model.NumberFans" />
                    <span asp-validation-for="NumberFans" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <th>
                    <label asp-for="Efficiency" class="control-label"></label>
                </th>
                <td>
                    <input asp-for="Efficiency" class="form-control w-50" value="@Model.Efficiency" />
                    <span asp-validation-for="Efficiency" class="text-danger"></span>
                </td>
            </tr>
            <tr class="btns">
                <th>
                </th>
                <td>
                    <input type="submit" value="Save" style="border-color: Highlight; color: Highlight" />
                </td>
            </tr>
        </table>
    </form>
</div>