@model IEnumerable<Bits_on_chips_application.Models.Order>

@{
    ViewData["Title"] = "All orders page";
}
<div class="text-center">
    <div class="title">@ViewData["Title"]</div>
    @if (Model.Count() > 0)
    {
        <table class="component-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a class="btns btn-edit" asp-action="Order" asp-route-id="@item.OrderId">See order</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="sub_title">
            <ul>
                <li>
                    You have no orders placed on our website yet. See what components you like <a class="nav-button" asp-area="" asp-controller="Store" asp-action="Categories">here</a>.
                </li>
            </ul>
        </div>
    }
</div>
